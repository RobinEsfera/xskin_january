
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Detail of Home Slider "#<%= @home_slider.id %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/home_slider">Home Sliders</a></li>
            <li class="current">Show</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title active"><a href="show_home_slider"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title"><a href="edit_home_slider"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_home_slider", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

  <!-- user information Start from here -->
             <div id="Show" class="content active">
                <div class="xskin-user-basic-information">
                  <div class="user-info">
                    <h4>Basic information</h4>

                    <div class="medium-4 left">
                      <span class="type-info">
                        Title
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@home_slider.title.present?) ? @home_slider.title : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Sub Title
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@home_slider.subtitle.present?) ? @home_slider.subtitle : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Link
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@home_slider.link.present?) ? @home_slider.link : "-" %>
                      </span>
                    </div>
                    <div class="medium-12 left">
                        <span class="type-info">
                      <div class="medium-4 left">
                          Image
                      </div>
                      <div class="medium-8 left">
                          <%= (@home_slider.image.present?) ? image_tag(@home_slider.image.url(:medium)) : "" %>
                      </div>
                        </span>
                    </div>


                    <div class="medium-4 left">
                      <span class="type-info">
                        Created At
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (!@home_slider.nil?) ? @home_slider.created_at.to_formatted_s(:long) : "" %>
                      </span>
                    </div>

                  </div><!-- /user-info -->
                </div><!-- basic information close -->

                <div class="clearfix"></div>
             </div>
             <!-- user information close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

