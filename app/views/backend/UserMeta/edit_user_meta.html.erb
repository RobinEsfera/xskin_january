<% @user_options = User.all.map{|u| [ u.name, u.id ] } %>
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Edit User Meta "#<%= @user_meta.id %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/user_meta">User Metas</a></li>
            <li class="current">Edit</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title"><a href="show_user_meta"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title active"><a href="edit_user_meta"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_user_meta", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

            <!-- add new tab start from here -->
             <div id="AddNew" class="content active">
                <div class="xskin-add-new-user">

                  <%= form_for @user_meta, url: {action: "edit_user_meta"}, html: {class: "nifty_form", method: "post"} do |f| %>
                  
                    <div class="medium-6 columns left">
                      <%= f.label :user %>

                     <% if !@user_meta.nil? && @user_meta.user_id.present? %>
                        <%= f.select(:user_id, options_for_select(@user_options, @user_meta.user_id), {:include_blank => 'Select..'}) %>
                     <% else %>
                        <%= f.select(:user_id, options_for_select(@user_options), {:include_blank => 'Select..'}) %>
                     <% end %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :currency %>
                      <%= f.text_field :currency %>
                    </div>
                    <div class="xskin-action">
                      <%= f.submit :class => 'button'  %>
                    </div>
                  <% end %>
                </div>
                <div class="clearfix"></div>
             </div>
             <!-- add new tab close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

