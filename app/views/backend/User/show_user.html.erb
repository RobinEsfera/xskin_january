
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Detail of User "#<%= @user.id %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/user">Users</a></li>
            <li class="current">Show</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title active"><a href="show_user"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title"><a href="edit_user"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_user", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

  <!-- user information Start from here -->
             <div id="Show" class="content active">
                <div class="xskin-user-basic-information">
                  <div class="user-info">
                    <h4>Basic information</h4>

                    <div class="medium-4 left">
                      <span class="type-info">
                        Name
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.name.present?) ? @user.name : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Email
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.email.present?) ? @user.email : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Provider
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.provider.present?) ? @user.provider : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        UID
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.uid.present?) ? @user.uid : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Referral Code
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.referral_code.present?) ? @user.referral_code : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Affiliate Id
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.affiliate_id.present?) ? @user.affiliate_id : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Sign In Count
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.sign_in_count.present?) ? @user.sign_in_count : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Current Sign In IP
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.current_sign_in_ip.present?) ? @user.current_sign_in_ip : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Last Sign In IP
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.last_sign_in_ip.present?) ? @user.last_sign_in_ip : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Current Sign In At
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.current_sign_in_at.present?) ? @user.current_sign_in_at.to_formatted_s(:long) : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Last Sign In At
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@user.last_sign_in_at.present?) ? @user.last_sign_in_at.to_formatted_s(:long) : "-" %>
                      </span>
                    </div>

                    <div class="medium-4 left">
                      <span class="type-info">
                        Is Admin
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <% if @user.admin == true %>
                            <div class="label label-success">✓</div>
                        <% else %>
                            <div class="label label-danger">✘</div>
                        <% end %>
                      </span>
                    </div>

                    <div class="medium-4 left">
                      <span class="type-info">
                        Created At
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (!@user.nil?) ? @user.created_at.to_formatted_s(:long) : "" %>
                      </span>
                    </div>

                  </div><!-- /user-info -->
                </div><!-- basic information close -->

                <div class="clearfix"></div>
             </div>
             <!-- user information close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

