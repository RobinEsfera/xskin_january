
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Detail of Layout "<%= @layout.name %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/layout">Layouts</a></li>
            <li class="current">Show</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title active"><a href="show_layout"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title"><a href="edit_layout"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_layout", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

  <!-- user information Start from here -->
             <div id="Show" class="content active">
                <div class="xskin-user-basic-information">
                  <div class="user-info">
                    <h4>Basic information</h4>

                    <div class="medium-4 left">
                      <span class="type-info">
                        Name
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (!@layout.nil?) ? @layout.name : "" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Device
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                      <% if !@layout.nil? %>
                        <% device = Device.where(:id => @layout.device_id).first %>
                      <% end %>
                        <%= (!device.nil?) ? device.name : "&nbsp;".html_safe %>
                      </span>
                    </div>
                    <div class="medium-12 left">
                        <span class="type-info">
                      <div class="medium-4 left">
                          Image
                      </div>
                      <div class="medium-8 left">
                          <%= (@layout.image.present?) ? image_tag(@layout.image.url(:thumb)) : "" %>
                      </div>
                        </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Is Active
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <% if @layout.is_active == true %>
                            <div class="label label-success">✓</div>
                        <% else %>
                            <div class="label label-danger">✘</div>
                        <% end %>
                      </span>
                    </div>


                    <div class="medium-4 left">
                      <span class="type-info">
                        Created At
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (!@layout.nil?) ? @layout.created_at.to_formatted_s(:long) : "" %>
                      </span>
                    </div>

                  </div><!-- /user-info -->
                </div><!-- basic information close -->

                <div class="clearfix"></div>
             </div>
             <!-- user information close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

