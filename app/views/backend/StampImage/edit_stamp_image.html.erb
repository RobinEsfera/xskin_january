<% @stamp_options = Stamp.all.map{|u| [ u.name, u.id ] } %>
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Edit Stamp Image "#<%= @stamp_image.id %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/stamp_image">Stamp Images</a></li>
            <li class="current">Edit</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title"><a href="show_stamp_image"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title active"><a href="edit_stamp_image"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_stamp_image", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

            <!-- add new tab start from here -->
             <div id="AddNew" class="content active">
                <div class="xskin-add-new-user">

                  <%= form_for @stamp_image, url: {action: "edit_stamp_image"}, html: {class: "nifty_form", method: "post"} do |f| %>
                    <div class="medium-6 columns left">
                      <%= f.label :Stamp %>

                     <% if !@stamp_image.nil? && @stamp_image.stamp_id.present? %>
                        <%= f.select(:stamp_id, options_for_select(@stamp_options, @stamp_image.stamp_id), {:include_blank => 'Select..'}) %>
                     <% else %>
                        <%= f.select(:stamp_id, options_for_select(@stamp_options), {:include_blank => 'Select..'}) %>
                     <% end %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :image %>
                      <%= f.file_field :image %>
                    </div>
                    <div class="xskin-action">
                      <%= f.submit :class => 'button'  %>
                    </div>
                  <% end %>
                </div>
                <div class="clearfix"></div>
             </div>
             <!-- add new tab close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

