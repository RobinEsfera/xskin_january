
    <!-- xskin dashboard design start from here -->
    <div class="xskin-dshboard-design">
        <h3>List of Wishlists</h3>
    <%= render "layouts/admin/messages" %>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li class="current">Wishlist</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title active"><a href="wishlist"><i class="fa fa-list"></i> List</a></li>
            <li class="tab-title"><a href="add_wishlist"><i class="fa fa-user-plus"></i> Add new</a></li>
          </ul>

          <div class="tabs-content">

          <!-- list tab start from here -->
            <div id="List" class="content active">
             <div class="xskin-user-entry">
                 <table cellpadding="0" cellspacing="0" width="100%;" id="device" class="display">
                     <thead>
                         <tr>
                             <th><input type="checkbox" /></th>
                             <th>Id</th>
                             <th>User</th>
                             <th>Product</th>
                             <th>Product Variation</th>
                             <th>Created at</th>
                             <th class="last shrink" style="width:10%;">ACTION</th>
                         </tr>
                     </thead>
                     <tbody>
                      <% if @wishlists.any? %>
                        <% @wishlists.each do |wishlists| 
                            user = User.where(:id => wishlists.user_id).first
                            product = Product.where(:id => wishlists.product_id).first
                            product_variation = ProductVariation.where(:id => wishlists.product_variation_id).first
                        %>
                         <tr>
                             <td><input type="checkbox" /></td>
                             <td><%= wishlists.id %></td>
                             <td><%= (!user.nil?) ? ((user.name.present?) ? user.name : user.id ): "-" %></td>
                             <td><%= (!product.nil?) ? product.name : "-" %></td>
                             <td><%= (!product_variation.nil?) ? product_variation.id : "-" %></td>
                             <td><%= wishlists.created_at.to_formatted_s(:long) %></td>
                             <td class="last links">
                                 <ul>
                                     <li>
                                      <%= link_to "<i class='fa fa-info-circle'></i>".html_safe, "#{wishlists.id}/show_wishlist", :title => "Show" %>
                                     </li>
                                     <li>
                                      <%= link_to "<i class='fa fa-pencil'></i>".html_safe, "#{wishlists.id}/edit_wishlist", :title => "Edit" %>
                                     </li>
                                     <li>
                                      <%= link_to "<i class='fa fa-close'></i>".html_safe, "/backend/#{wishlists.id}/delete_wishlist", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
                                     </li>
                                 </ul>
                             </td>
                         </tr>
                        <% end %>
                      <% end %>
                     </tbody>
                 </table>
             </div>
             <div class="clearfix"></div>
            </div>
            <!-- list tab close from here -->

            <!-- add new tab start from here -->
             <div id="AddNew" class="content">
                <div class="xskin-add-new-user">
                    <form class="new-user-ad">
                        <div class="medium-12 columns">
                            <p>Email</p>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="medium-6 columns">
                            <p>Password</p>
                            <input type="password" class="form-control" />
                        </div>
                        <div class="medium-6 columns">
                            <p>Password confirmation</p>
                            <input type="password" class="form-control" />
                        </div>
                        <div class="medium-6 columns">
                            <p>Name</p>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="medium-6 columns">
                            <p>Email2</p>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="medium-12 columns">
                            <label>
                                <input type="checkbox" /> Lorem ipsum dolor sit amet, consectetur
                            </label>
                        </div>
                        <div class="xskin-action">
                            <a href="#" class="button">Save</a>
                            <a href="#" class="button cancel">Cancel</a>
                        </div>
                    </form>
                </div>
                <div class="clearfix"></div>
             </div>
             <!-- add new tab close from here -->


             <div id="Export" class="content">
             export
             </div>
             <div id="panel55" class="content">
             import
             </div>


          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->