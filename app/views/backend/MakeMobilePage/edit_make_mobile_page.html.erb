
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Edit Make Mobile Page "<%= @make_mobile_page.title %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/make_mobile_page">Make Mobile Pages</a></li>
            <li class="current">Edit</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title"><a href="show_make_mobile_page"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title active"><a href="edit_make_mobile_page"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_make_mobile_page", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

            <!-- add new tab start from here -->
             <div id="AddNew" class="content active">
                <div class="xskin-add-new-user">

                  <%= form_for @make_mobile_page, url: {action: "edit_make_mobile_page"}, html: {class: "nifty_form", method: "post"} do |f| %>
                    <div class="medium-6 columns">
                      <%= f.label :title %>
                      <%= f.text_field :title %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :download_button_text %>
                      <%= f.text_field :dowanload_button_text %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :app_icon %>
                      <%= f.file_field :app_icon %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :background %>
                      <%= f.file_field :background %>
                    </div>
                    
                    <div class="medium-12 columns">
                        <label>
                        <%= f.check_box :active, {}, true, false %>
                            Is Active?
                        </label>
                    </div>
                    <div class="xskin-action">
                      <%= f.submit :class => 'button'  %>
                    </div>
                  <% end %>
                </div>
                <div class="clearfix"></div>
             </div>
             <!-- add new tab close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

