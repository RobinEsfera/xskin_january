    <%= render "layouts/admin/messages" %>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li class="current">Product Color</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title active"><a href="product_color"><i class="fa fa-list"></i> List</a></li>
            <li class="tab-title"><a href="add_product_color"><i class="fa fa-user-plus"></i> Add new</a></li>
          </ul>

          <div class="tabs-content">

          <!-- list tab start from here -->
            <div id="List" class="content active">
             <div class="xskin-user-entry">
                 <table cellpadding="0" cellspacing="0" width="100%;" id="device" class="display">
                     <thead>
                         <tr>
                             <th><input type="checkbox" /></th>
                             <th>Id</th>
                             <th>Name</th>
                             <th>Code</th>
                             <th>Store category</th>
                             <th>Store sub category</th>
                             <th>Created at</th>
                             <th class="last shrink" style="width:10%;">ACTION</th>
                         </tr>
                     </thead>
                     <tbody>
                      <% if @product_colors.any? %>
                        <% @product_colors.each do |product_colors| 
                            store_category = StoreCategory.where(:id => product_colors.store_category_id).first
                            store_sub_category = StoreSubCategory.where(:id => product_colors.store_sub_category_id).first
                        %>
                         <tr>
                             <td><input type="checkbox" /></td>
                             <td><%= product_colors.id %></td>
                             <td><%= product_colors.name %></td>
                             <td><strong style="color: <%= product_colors.code %>"><%= product_colors.code %></strong></td>
                             <td><%= (!store_category.nil?) ? store_category.name : "" %></td>
                             <td><%= (!store_sub_category.nil?) ? store_sub_category.name : "" %></td>
                             <td><%= product_colors.created_at.to_formatted_s(:long) %></td>
                             <td class="last links">
                                 <ul>
                                     <li>
                                      <%= link_to "<i class='fa fa-info-circle'></i>".html_safe, "#{product_colors.id}/show_product_color", :title => "Show" %>
                                     </li>
                                     <li>
                                      <%= link_to "<i class='fa fa-pencil'></i>".html_safe, "#{product_colors.id}/edit_product_color", :title => "Edit" %>
                                     </li>
                                     <li>
                                      <%= link_to "<i class='fa fa-close'></i>".html_safe, "/backend/#{product_colors.id}/delete_product_color", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
                                     </li>
                                 </ul>
                             </td>
                         </tr>
                        <% end %>
                      <% end %>
                     </tbody>
                 </table>
             </div>
             <div class="clearfix"></div>
            </div>
            <!-- list tab close from here -->

