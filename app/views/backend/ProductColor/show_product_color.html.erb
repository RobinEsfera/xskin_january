
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Detail of Product Color "<%= @product_color.name %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/product_color">Product Colors</a></li>
            <li class="current">Show</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title active"><a href="show_product_color"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title"><a href="edit_product_color"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_product_color", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

  <!-- user information Start from here -->
             <div id="Show" class="content active">
                <div class="xskin-user-basic-information">
                  <div class="user-info">
                    <h4>Basic information</h4>

                    <div class="medium-4 left">
                      <span class="type-info">
                        Name
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (!@product_color.nil?) ? @product_color.name : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Code
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@product_color.code.present?) ? "<strong style='color: #{@product_color.code}'>#{@product_color.code}</strong>".html_safe : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Store Category
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                      <% if !@product_color.nil? %>
                        <% store_category = StoreCategory.where(:id => @product_color.store_category_id).first %>
                      <% end %>
                        <%= (!store_category.nil?) ? store_category.name : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Store Sub Category
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                      <% if !@product_color.nil? %>
                        <% store_sub_category = StoreSubCategory.where(:id => @product_color.store_sub_category_id).first %>
                      <% end %>
                        <%= (!store_sub_category.nil?) ? store_sub_category.name : "-" %>
                      </span>
                    </div>


                    <div class="medium-4 left">
                      <span class="type-info">
                        Created At
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (!@product_color.nil?) ? @product_color.created_at.to_formatted_s(:long) : "" %>
                      </span>
                    </div>

                  </div><!-- /user-info -->
                </div><!-- basic information close -->

                <div class="clearfix"></div>
             </div>
             <!-- user information close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

