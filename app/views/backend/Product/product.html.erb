
    <!-- xskin dashboard design start from here -->
    <div class="xskin-dshboard-design">
        <h3>List of Products</h3>
    <%= render "layouts/admin/messages" %>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li class="current">Product</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title active"><a href="product"><i class="fa fa-list"></i> List</a></li>
            <li class="tab-title"><a href="add_product"><i class="fa fa-user-plus"></i> Add new</a></li>
          </ul>

          <div class="tabs-content">

          <!-- list tab start from here -->
            <div id="List" class="content active">
             <div class="xskin-user-entry">
                 <table cellpadding="0" cellspacing="0" width="100%;" id="device" class="display">
                     <thead>
                         <tr>
                             <th><input type="checkbox" /></th>
                             <th>Id</th>
                             <th>Name</th>
                             <th>User</th>
                             <th>Store category</th>
                             <th>Store sub category</th>
                             <th>Device</th>
                             <th>Sub device</th>
                             <th>Case</th>
                             <th>Brand</th>
                             <th>Price</th>
                             <th>Is Active</th>
                             <th class="last shrink" style="width:10%;">ACTION</th>
                         </tr>
                     </thead>
                     <tbody>
                      <% if @products.any? %>
                        <% @products.each do |products| 
                            store_category = StoreCategory.where(:id => products.store_category_id).first
                            store_sub_category = StoreSubCategory.where(:id => products.store_sub_category_id).first
                            device = Device.where(:id => products.device_id).first
                            sub_device = SubDevice.where(:id => products.sub_device_id).first
                            user = User.where(:id => products.user_id).first
                            case_select = Case.where(:id => products.case_id).first
                            brand = Brand.where(:id => products.brand_id).first
                        %>
                         <tr>
                             <td><input type="checkbox" /></td>
                             <td><%= products.id %></td>
                             <td><%= products.name %></td>
                             <td><%= (!user.nil?) ? ((user.name.present?) ? user.name : user.id) : "-" %></td>
                             <td><%= (!store_category.nil?) ? store_category.name : "" %></td>
                             <td><%= (!store_sub_category.nil?) ? store_sub_category.name : "" %></td>
                             <td><%= (!device.nil?) ? device.name : "" %></td>
                             <td><%= (!sub_device.nil?) ? sub_device.name : "" %></td>
                             <td><%= (!case_select.nil?) ? case_select.name : "" %></td>
                             <td><%= (!brand.nil?) ? brand.name : "" %></td>
                             <td><%= products.price %></td>

                            <% if products.is_active == true %>
                            <td class="is_active_field boolean_type" title="✓"><span class="label label-success">✓</span></td>
                            <% else %>
                                <td class="is_active_field boolean_type" title="✘"><span class="label label-danger">✘</span></td>
                            <% end %>
                             <td class="last links">
                                 <ul>
                                     <li>
                                      <%= link_to "<i class='fa fa-info-circle'></i>".html_safe, "#{products.id}/show_product", :title => "Show" %>
                                     </li>
                                     <li>
                                      <%= link_to "<i class='fa fa-pencil'></i>".html_safe, "#{products.id}/edit_product", :title => "Edit" %>
                                     </li>
                                     <li>
                                      <%= link_to "<i class='fa fa-close'></i>".html_safe, "/backend/#{products.id}/delete_product", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
                                     </li>
                                 </ul>
                             </td>
                         </tr>
                        <% end %>
                      <% end %>
                     </tbody>
                 </table>
             </div>
             <div class="clearfix"></div>
            </div>
            <!-- list tab close from here -->

            <!-- add new tab start from here -->
             <div id="AddNew" class="content">
