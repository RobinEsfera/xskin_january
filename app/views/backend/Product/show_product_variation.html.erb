
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Detail of Product Variation "#<%= @product_variation.id %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/product_variation">Product Variations</a></li>
            <li class="current">Show</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title active"><a href="show_product_variation?product_id=<%=params[:product_id] %>"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title"><a href="edit_product_variation?product_id=<%=params[:product_id] %>"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_product_variation?product_id=#{params[:product_id]}", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

  <!-- user information Start from here -->
             <div id="Show" class="content active">
                <div class="xskin-user-basic-information">
                  <div class="user-info">
                    <h4>Basic information</h4>

                    <div class="medium-12 left">
                        <span class="type-info">
                      <div class="medium-4 left">
                          Image
                      </div>
                      <div class="medium-8 left">
                          <%= (@product_variation.image.present?) ? image_tag(@product_variation.image.url(:medium)) : "" %>
                      </div>
                        </span>
                    </div>

                    <div class="medium-4 left">
                      <span class="type-info">
                        ProductColor
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                      <% if !@product_variation.nil? %>
                        <% @product_color = ProductColor.where(:id => @product_variation.product_color_id).first %>
                      <% end %>
                        <%= (!@product_color.nil?) ? @product_color.name : "" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Is Active
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <% if @product_variation.active == true %>
                            <div class="label label-success">✓</div>
                        <% else %>
                            <div class="label label-danger">✘</div>
                        <% end %>
                      </span>
                    </div>

                    <div class="medium-4 left">
                      <span class="type-info">
                        Created At
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (!@product_variation.nil?) ? @product_variation.created_at.to_formatted_s(:long) : "" %>
                      </span>
                    </div>

                  </div><!-- /user-info -->
                </div><!-- basic information close -->

                <div class="clearfix"></div>
             </div>
             <!-- user information close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

