<% @device_options = Device.all.map{|u| [ u.name, u.id ] } %>
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Edit Sub Device "<%= @sub_device.name %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/sub_device">Sub Devices</a></li>
            <li class="current">Edit</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title"><a href="show_sub_device"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title active"><a href="edit_sub_device"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_sub_device", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

            <!-- add new tab start from here -->
             <div id="AddNew" class="content active">
                <div class="xskin-add-new-user">

                  <%= form_for @sub_device, url: {action: "edit_sub_device"}, html: {class: "nifty_form", method: "post"} do |f| %>
                    <div class="medium-6 columns">
                      <%= f.label :name %>
                      <%= f.text_field :name %>
                    </div>
                    <div class="medium-6 columns left">
                      <%= f.label :Sub_device %>

                     <% if !@sub_device.nil? && @sub_device.device_id.present? %>
                        <%= f.select(:device_id, options_for_select(@device_options, @sub_device.device_id), {:include_blank => 'Select..'}) %>
                     <% else %>
                        <%= f.select(:device_id, options_for_select(@device_options), {:include_blank => 'Select..'}) %>
                     <% end %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :price %>
                      <%= f.text_field :price %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :sub_device_image %>
                      <%= f.file_field :sub_device_image %>
                    </div>
                    <div class="xskin-action">
                      <%= f.submit :class => 'button'  %>
                    </div>
                  <% end %>
                </div>
                <div class="clearfix"></div>
             </div>
             <!-- add new tab close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

