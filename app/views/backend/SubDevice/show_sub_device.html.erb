
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Detail of Sub Device "<%= @sub_device.name %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/sub_device">Sub Devices</a></li>
            <li class="current">Show</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title active"><a href="show_sub_device"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title"><a href="edit_sub_device"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_sub_device", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

  <!-- user information Start from here -->
             <div id="Show" class="content active">
                <div class="xskin-user-basic-information">
                  <div class="user-info">
                    <h4>Basic information</h4>

                    <div class="medium-4 left">
                      <span class="type-info">
                        Name
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (!@sub_device.nil?) ? @sub_device.name : "" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Device
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                      <% if !@sub_device.nil? %>
                        <% device = Device.where(:id => @sub_device.device_id).first %>
                      <% end %>
                        <%= (!device.nil?) ? device.name : "-" %>
                      </span>
                    </div>
                    <div class="medium-4 left">
                      <span class="type-info">
                        Price
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (@sub_device.price.present?) ? @sub_device.price : "-" %>
                      </span>
                    </div>
                    <div class="medium-12 left">
                        <span class="type-info">
                      <div class="medium-4 left">
                          Image
                      </div>
                      <div class="medium-8 left">
                          <%= (@sub_device.sub_device_image.present?) ? image_tag(@sub_device.sub_device_image.url(:medium)) : "" %>
                      </div>
                        </span>
                    </div>


                    <div class="medium-4 left">
                      <span class="type-info">
                        Created At
                      </span>
                    </div>
                    <div class="medium-8 left">
                      <span class="user-infor">
                        <%= (!@sub_device.nil?) ? @sub_device.created_at.to_formatted_s(:long) : "" %>
                      </span>
                    </div>

                  </div><!-- /user-info -->
                </div><!-- basic information close -->

                <div class="clearfix"></div>
             </div>
             <!-- user information close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

