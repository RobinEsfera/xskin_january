<% @faq_category_options = FaqCategory.all.map{|u| [ u.name, u.id ] } %>
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>Edit Faq "#<%= @faq.id %>"</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/faq">Faqs</a></li>
            <li class="current">Edit</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title"><a href="show_faq"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title active"><a href="edit_faq"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_faq", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

            <!-- add new tab start from here -->
             <div id="AddNew" class="content active">
                <div class="xskin-add-new-user">

                  <%= form_for @faq, url: {action: "edit_faq"}, html: {class: "nifty_form", method: "post"} do |f| %>
                    <div class="medium-6 columns left">
                      <%= f.label :Case %>
                     <% if !@faq.nil? && @faq.faq_category_id.present? %>
                        <%= f.select(:faq_category_id, options_for_select(@faq_category_options, @faq.faq_category_id), {:include_blank => 'Select..'}) %>
                     <% else %>
                        <%= f.select(:faq_category_id, options_for_select(@faq_category_options), {:include_blank => 'Select..'}) %>
                     <% end %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :question %>
                      <%= f.text_area :question %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :answer %>
                      <%= f.text_area :answer %>
                    </div>
                    <div class="medium-12 columns">
                        <label>
                        <%= f.check_box :is_active, {}, true, false %>
                            Is Active?
                        </label>
                    </div>
                    <div class="xskin-action">
                      <%= f.submit :class => 'button'  %>
                    </div>
                  <% end %>
                </div>
                <div class="clearfix"></div>
             </div>
             <!-- add new tab close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

