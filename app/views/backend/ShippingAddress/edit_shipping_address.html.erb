<% @country_options = Country.all.map{|u| [ u.name, u.id ] } 
  @user_options = User.all.map{|u| [ u.name, u.id ] } 
%>
      <!-- xskin dashboard design start from here -->
      <div class="xskin-dshboard-design">
        <h3>List of Users</h3>
        <ul class="breadcrumbs">
            <li><a href="#">Dashboard</a></li>
            <li><a href="/backend/shipping_address">Shipping Address</a></li>
            <li class="current">Edit</li>
        </ul>

        <!-- user entry start from here -->
        <div class="xskin-users-entry">
            <ul class="tabs">
            <li class="tab-title"><a href="show_shipping_address"><i class="fa fa-camera"></i> Show</a></li>
            <li class="tab-title active"><a href="edit_shipping_address"><i class="fa fa-pencil"></i> Edit</a></li>
            <li class="tab-title">
              <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, "delete_shipping_address", method: :delete, :title => "Delete", data: { confirm: 'Are you confirm you want to delete this?' } %>
            </li>
          </ul>

          <div class="tabs-content">

            <!-- add new tab start from here -->
             <div id="AddNew" class="content active">
                <div class="xskin-add-new-user">

                  <%= form_for @shipping_address, url: {action: "edit_shipping_address"}, html: {class: "nifty_form", method: "post"} do |f| %>
                    <div class="medium-6 columns">
                      <%= f.label :User %>
                     <% if !@shipping_address.nil? && @shipping_address.user_id.present? %>
                        <%= f.select(:user_id, options_for_select(@user_options, @shipping_address.user_id), {:include_blank => 'Select User'}) %>
                     <% else %>
                        <%= f.select(:user_id, options_for_select(@user_options), {:include_blank => 'Select..'}) %>
                     <% end %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :first_name %>
                      <%= f.text_field :first_name %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :last_name %>
                      <%= f.text_field :last_name %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :address %>
                      <%= f.text_area :address1 %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :Country %>
                     <% if !@shipping_address.nil? && @shipping_address.country_id.present? %>
                        <%= f.select(:country_id, options_for_select(@country_options, @shipping_address.country_id), {:include_blank => 'Select Country'}) %>
                     <% else %>
                        <%= f.select(:country_id, options_for_select(@country_options), {:include_blank => 'Select Country'}) %>
                     <% end %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :City %>
                      <%= f.text_field :city %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :State %>
                      <%= f.text_field :state %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :Pincode %>
                      <%= f.text_field :pincode %>
                    </div>
                    <div class="medium-6 columns">
                      <%= f.label :Mobile %>
                      <%= f.text_field :mobile %>
                    </div>
                    <div class="xskin-action">
                      <%= f.submit :class => 'button'  %>
                    </div>
                  <% end %>
                </div>
                <div class="clearfix"></div>
             </div>
             <!-- add new tab close from here -->

          </div>

        </div>
        <!-- user entry close from here -->

      </div>
      <!-- xskin dashboard design close from here -->

