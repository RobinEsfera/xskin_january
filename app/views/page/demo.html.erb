<section class="skin-content">
  <div class="row">
    <div class="xskin-content-section">
      <!-- sidebar start from here -->
        <div class="medium-3 left hide-for-small-only">
          <div class="sidebar">
            <% if @product_variation.any? %>
              <% @product_variation.each do |product_variation| %>
                <div class="iphone-6">
                  <div class="">
                    <a href="/product?product=<%= product_variation.id %>">
                    <%= image_tag(product_variation.image.url(:medium)) %>
                  </a>
                  </div>
                  <div class="masking smooth">
                    <div class="xskin-add-to-cart">
                      <div class="add-to-cart">
                      <a href="/wishlist/<%= product_variation.id %>"><span class="smooth cart">
                        <%= image_tag"zoom.png" %>
                        </span></a>
                        <a href="/cart/<%= product_variation.id %>"><span class="smooth cart your-cart">
                        <%= image_tag"add-to-cart.png" %>
                        </span></a>
                      </div>
                    </div>
                  </div>

                </div>
                <!-- iPhone6 close from here -->
              <% end %>
            <% else %>
              <div class="iphone-6">
              <div class="no-data">Latest products are coming soon!!</div>
              </div>
            <% end %>

          </div>
        </div>
        <!-- sidebar close from here -->


        <!-- slider start from here -->
        <div class="medium-6 columns">
        <div class="slide-start">
        <% if @arrHomeSliders.any? %>
        <% @arrHomeSliders.each do |arrHomeSliders| %>
          <div class="xskin-slider">
            <div class="xskin-slide">
              <%=image_tag arrHomeSliders.image.url(:medium),:class=>"xskin-slide-back-img" %>
            </div>

            <div class="xskin-slide-caption">
              <div class="caption">
                <div class="make-your-own-skin">
                  <div class="slide-cap">
                    <h2><%= arrHomeSliders.title %></h2>
                    <h1><%= arrHomeSliders.subtitle %></h1>
                    <% if arrHomeSliders.link.present? %>
                      <%= link_to "Learn More", "#{request.protocol}#{request.host_with_port}/#{arrHomeSliders.link}", class: :button %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <!-- slide caption close from here -->
          </div>
          <% end %>
          <% end %>

          </div>

        </div>
        <!-- slider close from here -->


        <div class="medium-3 left hide-for-small-only">
          <div class="sidebar">
            <div class="iphone-6">
              <%=image_tag"girl-using-iphone.jpg" %>
              <div class="xskin-top-design">
              <div class="caption">
                <div class="make-your-own-skin">
                  <div class="slide-cap">
                    <h3>top 100<br><span>Design</span></h3>
                    <%= link_to"See More", top_design_path,:class=>"button" %>
                  </div>
                </div>
              </div>
              </div>
              <!-- top design caption close from here -->

            </div>
            <div class="iphone-6">
              <%=image_tag"mans-using-iphone.jpg" %>
              <div class="xskin-top-design">
              <div class="caption">
                <div class="make-your-own-skin">
                  <div class="slide-cap">
                  <h5>Give your friend</h5>
                  <h3>get &dollar;10</h3>
                  <%= link_to"See More", invite_path,:class=>"button" %>
                  </div>
                </div>
              </div>
              </div>
              <!-- top design caption close from here -->
            </div>
          </div>
        </div>
        </div>
 
        <div class="small-12 left show-for-small-only">
          <div class="sidebar">
            <div class="iphone-6">
              <%=image_tag"girl-using-iphone.jpg" %>
              <div class="xskin-top-design">
              <div class="caption">
                <div class="make-your-own-skin">
                  <div class="slide-cap">
                    <h3>top 100<br><span>Design</span></h3>
                    <a href="#" class="button">see more</a>
