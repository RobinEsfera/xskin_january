                    <a href="#"><span class="smooth cart your-cart">
                    <%=image_tag"add-to-cart.png" %>
                    </span></a>
                  </div>
                </div>
              </div>
            </div>
            <!-- iPhone6 close from here -->
          </div>
        </div>
        </div>
</section>