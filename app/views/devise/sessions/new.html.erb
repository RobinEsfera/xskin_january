<div class="xskin-login-signup">
<div class="row">
    <div class="login-signup-to-xskin">
      <h1>LOGIN/SIGNUP to <span>XSKIN</span></h1>
      <div class="xskin-login-section">

      <div class="xskin-login-top-section">
        <div class="xskin-login-with-facebook">
          <a href="<%= user_omniauth_authorize_path('facebook') %>"><span class="login-icon"><i class="fa fa-facebook"></i></span> <span class="log-in">With <strong>Facebook</strong></span></a>
        </div>
        <!-- facebook close from here -->
        </div>
        <!-- facebook or instagram close from here -->
        <div class="clearfix"></div>

        <div class="xskin-login-form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true %>
            </div>
            <div class="field">
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
            <div class="field sign-in-forget-pass">
              <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

            <%=link_to"Forgot password?",new_user_password_path,:class=>"forget-pass" %>

            <%= f.submit "Sign in",:class=>"button" %> 

            </div>

            <div class="medium-6 left text-left">
              <a class="back-or-sign-up" href="<%=demo_path %>"><i class="fa fa-long-arrow-left"></i> Back to Home</a>
            </div>
            <div class="medium-6 right text-right">
              <a class="back-or-sign-up" href="<%=new_user_registration_path %>"><i class="show-for-small-only fa fa-long-arrow-left"></i> New Member Sign-up <i class="fa fa-long-arrow-right hide-for-small-only"></i></a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    </div>
</div>
<% render "devise/shared/links" %>