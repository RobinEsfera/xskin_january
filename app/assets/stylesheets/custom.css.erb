div.design-template > div.grabbable {
    position: absolute;
    border: 1px solid rgba(30,30,30,0.1);
}
.close-search {
	cursor: pointer;
}
#error_explanation {
	border: 1px solid rgb(184, 21, 21);
	background: red;
	padding: 0 10px;
}
#error_explanation h2 {
  font-size: 20px;
  text-transform: capitalize;
  text-shadow: 0 1px 1px rgba(0,0,0,0.5);
color: white;
font-weight: bold;
}
#error_explanation ul {
color: white;
list-style: outside none none;
margin: 0;
padding: 0;
font-family: "nexa_lightregular";
}

table.track_order .close-detail,table.track_order tr.track_order_detail, ul.promotion li .offer-term-and-condition, ul.promotion li .close-detail{
	display: none;
}

.xskin-main-menu a {
	font-weight: bold;
}
ul.mobile-nav .xskin-active {
    background: #de127a none repeat scroll 0 0;
    color: #fff;
}

.xskin-product-item h3 a.xskin-store {
    text-transform: uppercase;
    font-weight: 700;
    color: #747474;
    text-align: center;
}

.list-images li img {
  width: 100%;
  height: 100%;
}

.xskin-all-stamps > ul > li:hover span.xskin-overlay {
    top: 0px;
}
.list-images span.xskin-overlay {
    position: absolute;
    top: -35px;
    right: 2px;
}

.list-images span.xskin-overlay i {
    background-color: #FF9F18;
    font-size: 20px;
    color: #fff;
    font-size: 15px;
    height: 20px;
    width: 20px;
    text-align: center;
    line-height: 20px;
    border-radius: 30px;
    cursor: pointer;
}

.no-data {    
    color: red;
    border: 1px solid rgba(0, 0, 0, 0.24);
    padding: 5px 15px;
    background: #fff;
    border-radius: 7px;
    margin-bottom: 20px;
    font-weight: 500;
    font-size: 23px;
}
.cart_icon_count {
    position: absolute;
    top: 0px;
    right: 0;
    width: 16px;
    height: 16px;
    border-radius: 50px;
    background-color: #E0147B;
    color: #fff;
    text-align: center;
    padding: 0;
    line-height: 17px;
    font-size: 10px;
    font-family: arial;
    font-weight: 600;
}
.continue input[type="submit"] {    
    background-color: #ff9f18;
    text-align: center;
    font-family: 'Open Sans Condensed', Helvetica, sans-serif;
    font-weight: 700;
    font-size: 16px;
    color: #fff;
    margin: 0px;
    cursor: pointer;
}
